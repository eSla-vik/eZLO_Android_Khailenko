<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_device_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_main_container_device_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/aciv_device_item_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:src="@drawable/device_test_image"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/aciv_tv_device_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_dimen_25sp"
            android:layout_marginHorizontal="15dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/aciv_device_item_image"
            app:layout_constraintTop_toTopOf="@id/aciv_device_item_image"
            tools:text="@string/device_item_name"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/aciv_tv_device_item_pk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_dimen_20sp"
            android:layout_marginHorizontal="15dp"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/aciv_device_item_image"
            app:layout_constraintTop_toBottomOf="@id/aciv_tv_device_item_title"
            tools:text="@string/device_item_sn"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/acib_device_item_edit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="10dp"
            android:src="@drawable/ic_edit"
            app:layout_constraintStart_toEndOf="@id/aciv_device_item_image"
            app:layout_constraintEnd_toEndOf="@id/aciv_tv_device_item_title"
            app:layout_constraintTop_toBottomOf="@id/aciv_tv_device_item_pk"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/acib_device_item_detail_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:src="@drawable/ic_right_arrow"
            android:layout_marginHorizontal="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>